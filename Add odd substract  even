#Am
n=int(input())
for i in  range(n):
    l=[]
    a,b=map(int,input().split())
    if a>b:
        if (a-b)%2==0:
            l.append(1)
        else:
            l.append(2)
    elif b>a:
        if (b-a)%2==0:
            l.append(2)
        else:
            l.append(1)
    else:
        l.append(0)
    print(*l)
        
