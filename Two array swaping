#ma

t=int(input())
for y in range(t):
    n,k=map(int,input().split())
    a=list(map(int,input().split()))
    b=list(map(int,input().split()))
    store=[]
    a.sort()
    b.sort(reverse=True)
    for i in range(k):
        if b[i]>a[i]:
            a[i]=0
            
            store.append(b[i])
        else:
            break
    print(sum(a)+sum(store))
